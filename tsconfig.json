{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
	"moduleResolution": "node",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
	"suppressImplicitAnyIndexErrors": true,
	"lib": [ "es2015","dom"],
	"outDir": "src/includes"
  },
  "include": [
        "src/includes/**/*"
    ],
  "exclude": [
	"node_modules"
  ]
}